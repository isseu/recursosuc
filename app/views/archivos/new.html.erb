<h1>Subir archivo <span class="glyphicon glyphicon-upload"></span></h1>
<%= form_for @archivo, :url => archivos_path, :html => { :multipart => true } do |form| %>
    <div class="form-group">
      <label for="ramo">Ramo</label>
      <input type="email" class="form-control" id="ramo" placeholder="ramo">
    </div>
    <div class="form-group">
      <label for="exampleInputFile">Archivo a subir:</label>
      <%= form.file_field :documento, :id => 'exampleInputFile' %>
      <p class="help-block">El tama√±o maximo del archivos debe ser de 1mb y de extension PDF.</p>
    </div>
    <div class="row">
        <%= submit_tag "Subir", :class =>"btn btn-primary btn-lg col-md-4 col-md-offset-4" %>
    </div>
<% end %>