<!DOCTYPE html>
<html>
<head>
  <title>Recursosuc</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="contenedor-principal">
      <div class="navbar" style="overflow:hidden">
        <a href="" class="brand"><h3 class="t-principal">Recursos<span>UC</span></h3></a>
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <div class="nav-collapse collapse navegador" >
          <ul class="nav nav-pills pull-right">
            <li class="active"><a href="#">Inicio</a></li>
            <li><a href="#">Ingresar</a></li>
            <li><a href="#">Acerca de</a></li>
          </ul>
        </div>
      </div>
      <hr>

      <div class="buscador text-center">
        <form class="form-search">
          <div class="input-append">
            <input type="text" class="span6 search-query" placeholder="I3 Estatica y dinamica segundo semestre">
            <button type="submit" class="btn">Buscar</button>
          </div>
          <p class="span4 offset5" style="margin-top:10px;">
            <a class="btn btn-mini" href="#" id="boton-avanzado"><i id="icono_chevron" class="icon-chevron-down"></i> Avanzado</a>
          </p>
         </form>
      </div>
      <div class="well well-small span row-fluid" id="editor-input" style="display: none">
        <form class="form-horizontal">
          <fieldset>
            <legend>Avanzado</legend>
            <div class="row-fluid">
              <div class="control-group span5">
                <label class="control-label">Carrera</label>
                <div class="controls">
                  <select class="controls">
                    <option>Ingenieria</option>
                  </select>
                </div>
              </div>
              <div class="control-group span5">
                <label class="control-label">Ramo</label>
                <div class="controls">
                  <select>
                    <option>Estatica y dinamica</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="row-fluid">
              <div class="control-group span5">
                <label class="control-label">Año</label>
                <div class="controls">
                  <select>
                    <option>2012</option>
                  </select>
                </div>
              </div>
              <div class="control-group span5">
                <label class="control-label">Semestre</label>
                <div class="controls">
                  <select >
                    <option>1er Semestre</option>
                  </select>
                </div>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
      <!-- EN BUSQUEDA -->
      <%= yield %>
      <!-- FIN BUSQUEDA -->
      </form>
      <div id="push"></div>
    </div>

    <div id="footer">
      <div id="creditos">
        <hr>
        <p class="muted credit"><small><a href="#">RecursosUC</a> © 2013</small></p>
      </div>
    </div>
    <script>
        $("#boton-avanzado").click(function () {
            $("#editor-input").slideToggle('fast',
                    function () {
                        $("#icono_chevron").toggleClass("icon-chevron-down icon-chevron-up");
                    }
            );
        });
    </script>
</body>
</body>
</html>
